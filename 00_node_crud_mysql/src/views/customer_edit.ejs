<%- include('partials/header'); %>
<div class="container">
    <div class="row pt-2">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= data.id %>" method="post" class="form">
                        <div class="form-group">
                             <input type="text" name="name" placeholder="Name" class="form-control" value="<%= data.name %>">
                        </div>
                        <div class="form-group pt-2">
                            <input type="text" name="address" placeholder="Address" class="form-control" value="<%= data.address %>">
                       </div>
                       <div class="form-group pt-2">
                            <input type="text" name="phone" placeholder="Phone" class="form-control" value="<%= data.phone %>">
                        </div>
                        <div class="form-group pt-2">
                            <button type="submit" class="btn btn-dark">Update</button>
                        </div>
                     </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer'); %>